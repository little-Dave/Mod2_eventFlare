<h2>Hi <%= @user.first_name %>,</h2>
<p>Use the form below to create a new event in <%= @user.city.name_state %></p>
<%= form_for @event do |f| %>

  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  
  <%= f.label "In " %><%= f.collection_select :time_interval_id, TimeInterval.all, :id, :interval, prompt: true %><%= f.label " minutes" %><br>
  
  <%= f.label :location %><br>
  <%= f.collection_select :location_id, @user.city.locations, :id, :name, prompt: true %><br>
  
  <%= f.label :category %><br>
  <%= f.collection_select :category_id, Category.all, :id, :name, prompt: true %><br>
  
  <%= f.label :notes %><br>
  <%= f.text_area :notes %><br>
  
  <%= f.submit %>
<% end %>

<%= link_to "Back to #{@user.city.name_state} events", events_path %>
