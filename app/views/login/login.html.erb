<% if @error %>
<p><%= @error %></p>
<% end %>

<%= form_for @user, url: {controller: "sessions", action: "create"} do |f| %>
<div class="row">
  <div class="field form-group col-md-4">
  <%= f.label :username %><br>
  <%= f.text_field :username, class: "form-control" %>
  </div>
</div>
<div class="row">
  <div class="field form-group col-md-4">
  <%= f.label :password %><br>
  <%= f.password_field :password, class: "form-control" %>
  </div>
</div>
<br>
  <%= f.submit "Login", class: 'btn btn-success'%>

<% end %>
<br>
<p>First time here? <%= link_to "Create an account", new_user_path %>