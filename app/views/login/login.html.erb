<% if @error %>
<p><%= @error %></p>
<% end %>

<%= form_for @user, url: {controller: "sessions", action: "create"} do |f| %>

  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Login" %>

<% end %>

<p>First time here? <%= link_to "Create an account", new_user_path %>